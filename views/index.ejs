<!DOCTYPE html>
<html ng-app="ArkApp">
<head>
  <title>Advancement for Rural Kids</title>
  <script src="/angular/angular.js" ></script>
  <script src="/angular-route/angular-route.js" ></script>
  <script src="/jquery/dist/jquery.min.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/nav_controller.js" ></script>
  <script src="/js/home_controller.js" ></script>
  <script src="/js/donate_controller.js" ></script>
  <script src="/js/impact_controller.js" ></script>
  <script src="/js/feeding_controller.js" ></script>
  <link rel="stylesheet" type="text/css" href="/style/style.css">
  <meta name="viewport" content="initial-scale=1.0">
  <meta charset="utf-8">
</head>
<body>
  <div id="nav-bar" class="full-width" ng-controller="NavController as nav">
    <a href="#/" ng-click="nav.home()" ng-mouseover="nav.reset()"><img src="/images/ARK_logo.png" id="icon"></a> <!-- home/icon -->
    <div id="menu-bar">
      <div id="nav-button-container">
        <div ng-mouseover="nav.reset()" class="right reset"> </div> <!-- reset -->
        <a href="#/donate" ng-mouseover="nav.donate()" class="nav-button right nav-text-main bold grey small" id="donate">DONATE</a> <!-- donate --> 
        <div ng-mouseover="nav.join()" class="nav-button right nav-text-main bold grey small" id="join">JOIN </div> <!-- join -->
        <div ng-mouseover="nav.schools()" class="nav-button right nav-text-main bold grey small" id="schools">SCHOOLS </div> <!-- schools -->
        <div ng-mouseover="nav.solutions()" class="nav-button right nav-text-main bold grey small" id="solutions">SOLUTIONS </div> <!-- solutions -->
        <a href="#/impact" ng-mouseover="nav.impact()" class="nav-button right nav-text-main bold grey small" id="impact">IMPACT</a> <!-- impact -->
      </div> <!-- nav-button-container -->
      <div ng-mouseover="nav.reset()" class="right reset"> </div> <!-- reset -->
      <div ng-mouseover="nav.reset()" class="right reset-bottom"> </div> <!-- reset -->
    </div> <!-- menu-bar -->
    <div ng-show="nav.toggle" id="second-menu">
      <ul id="second-nav-buttons">
        <li ng-repeat="button in nav.secondNav[nav.whichNav]" ng-click="nav.menuVanish()" class="second-nav-button right"><a href="#/{{button}}" class="nav-text-main bold grey">{{button}}</a></li>
      </ul>
    </div>
    <div ng-mouseover="nav.reset()" class="right reset-bottom"> </div> <!-- reset -->
  </div> <!-- navbar -->
  <div id="main-content" class="full-width"> 
    <div ng-view></div> <!-- template -->
  </div> <!-- main-content -->
</body>
</html>